<!DOCTYPE html>  
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel='stylesheet' href="~/Content/Site.css" />
    <link id='size-stylesheet' rel='stylesheet' href="~/Content/Site.css" />
    
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
     
 
    
</head>
<body>
    <a id="top"></a>
    <div id='cssmenu'>
    @Html.Action("Index", "Category")
    </div>

    <div id="wrapper">
        <div id="header">
            
            <div id="header-logo">
                @Html.ActionLink("ʃɛdjuːl", "Index", "Home")
            </div>
            <div id="about" >@Html.ActionLink("About","Index","About")</div>
            <div id="search">
                @Html.Action("Index", "Search")
            </div>
        </div>
        <div id="content-wrapper">
            <div id="searchholder"></div>
            <div class="showhidebutton"></div>
            <div id="content">
                @RenderBody()
            </div>
            
        </div>
        <div id='footer'>
            <label id='labelShareMode'></label>
        </div>
    </div>
    


    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <a href="#" class="back-to-top">Back to Top</a>

        <script>
            jQuery(document).ready(function () {
                
                var offset = 220;
                var duration = 500;
                jQuery(window).scroll(function () {
                    if (jQuery(this).scrollTop() > offset && !presentationModeActivated) {
                        jQuery('.back-to-top').fadeIn(duration);
                    } else {
                        jQuery('.back-to-top').fadeOut(duration);
                    }
                });

                jQuery('.back-to-top').click(function (event) {
                    event.preventDefault();
                    jQuery('html, body').animate({ scrollTop: 0 }, duration);
                    return false;
                })

                if (shareModeActivated()) {
                    var categoryHandler = JSON.parse(localStorage[local_storage_key]);
                    $("#labelShareMode").text("Shared ID is: "+categoryHandler.shareId);
                    $("#footer").show();
                }
                else {
                    $("#footer").hide();
                }
            });
            $(".open").ready(function () {
                setTimeout(function () { $('.popbox').popbox() }, 1000);//shhh...
            });
        </script>

    @Scripts.Render("~/bundles/jqueryval")


    <script type='text/javascript' charset='utf-8' src='/Scripts/popbox.js'></script>
    @Scripts.Render("~/bundles/jqueryui")

    <script>
            startUpdating();
    </script>
</body>
</html>
